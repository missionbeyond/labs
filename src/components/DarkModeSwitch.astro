---
import { Icon } from "astro-icon/components";
---

<button
  id="theme-toggle"
  class="text-slate-500 dark:text-slate-400 flex flex-row align-middle justify-center gap-2"
>
  <span class="p-2 bg-transparent dark:bg-slate-700 rounded-full"><Icon name="bi:moon-stars-fill" /></span>
  <span class="p-2 bg-slate-200 dark:bg-transparent rounded-full"><Icon name="bi:sun-fill" /></span>
</button>

<script is:inline>
  document.getElementById("theme-toggle").addEventListener("click", () => {
    const element = document.documentElement;
    element.classList.toggle("dark");
    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
</script>
